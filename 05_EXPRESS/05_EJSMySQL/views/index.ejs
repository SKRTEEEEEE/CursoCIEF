<%- include('./templates/head.ejs') %>
<body>
    <header class="container my-4">
        <h1 class="text-center">Agenda de teléfonos</h1>
    </header>
    <main class="container-sm">
        <table id="contactos" class="table table-striped table-dark table-hover">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Número</th>
                <th>Tipo</th>
              </tr>
            </thead>
            <tbody>
              
            <% datos.forEach(contacto => { %><tr>
                <td><%= contacto.nombre %></td>
      <td><%= contacto.apellido %></td>
      <td><%= contacto.numero %></td>
      <td><i><%= contacto.tipo %></i></td></tr>
            <% }); %>

        
    </tbody>
  </table>
  <div class=" text-center"><a class="btn btn-primary" role="button" href="/form" aria-disabled="false">Añadir contacto</a></div>
  
  <!-- <button class="btn btn-outline-secondary"><a href="/form">Ves al form</a></button> -->
    </main>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@9.0.3/dist/umd/simple-datatables.min.js"></script>
    <script src="js/script.js"></script>
</body>
</html>